    function submitURL(){
        var userVideoURL = document.videoForm.videoURL.value;
        document.write(userVideoURL.replace("frameborder='0'","frameborder='1'"));
        var htmlToInsert = "<li><center><video>" + userVideoURL + "</video></center></li>";
        opener.document.getElementById('sortable2').insertAdjacentHTML("beforeEnd", htmlToInsert);
        window.close();
    }
    function YouTubeURL(){
        var userVideoURL = document.YouTubeForm.YouTubeURL.value;
        document.write(YouTubeURL.replace("frameborder='0'","frameborder='1'"));
        var htmlToInsert = "<li><center>" + YouTubeURL + "</center></li>";
        opener.document.getElementById('sortable2').insertAdjacentHTML("beforeEnd", htmlToInsert);
        window.close();
    }
</script>
</html>